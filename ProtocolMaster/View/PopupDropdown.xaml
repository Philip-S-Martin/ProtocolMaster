<Window x:Class="ProtocolMaster.View.PopupDropdown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtocolMaster.View"
        mc:Ignorable="d"
        Title="Input Prompt" Height="70" Width="300">
    <StackPanel>
        <ComboBox Name="Dropdown" Height="40" Margin="0,0,-0.4,0" IsEditable="False" IsReadOnly="True">
            <ComboBoxItem IsSelected="True" Visibility="Collapsed">Click Here to Select</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
