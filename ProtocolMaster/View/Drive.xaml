<UserControl x:Class="ProtocolMaster.View.Drive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProtocolMaster.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <DockPanel>
        <!--Google Drive Toolbar-->
        <DockPanel DockPanel.Dock="Top" Style="{StaticResource Menu}">
            <!--<TextBlock Style="{StaticResource MenuHeader}" DockPanel.Dock="Top">Drive</TextBlock>-->
            <Menu>
                <MenuItem Header="Sign-In" Name="AccountButton" Click="Account_Click"/>
                <MenuItem Header="Refresh" Name="RefreshButton" Click="Refresh_Click"/>
                <MenuItem Header="New Folder" Name="FolderButton" Click="Folder_Click" Visibility="Hidden"/>
            </Menu>
        </DockPanel>
        <!--Google Drive Treeview-->
        <TreeView BorderThickness="0" Background="Transparent">
            <TreeViewItem Header="Google Drive Public" Focusable="False"/>
            <TreeViewItem Header="Google Drive Personal" Name="FileTree" Focusable="False"/>
            <TreeViewItem Header="Local Protocols" Focusable="False"/>
        </TreeView>
    </DockPanel>
</UserControl>
