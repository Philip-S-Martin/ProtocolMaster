<Page x:Class="ProtocolMaster.View.DrivePane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtocolMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="300"
      Title="Page1">

    <DockPanel>
        <!--Google Drive Toolbar-->
        <Menu DockPanel.Dock="Top">
            <TextBlock Style="{StaticResource ToolHeader}">Drive</TextBlock>
            <MenuItem Header="Sign-In" Name="AccountButton" Click="Account_Click"/>
            <MenuItem Header="Refresh" Name="RefreshButton" Click="Refresh_Click"/>
            <MenuItem Header="New Folder" Name="FolderButton" Click="Folder_Click"/>
        </Menu>
        <!--Google Drive Treeview-->
        <TreeView  Name="FileTree" BorderThickness="0" >
            <TreeViewItem Header="McIntyre">
                <TreeViewItem Header="VNS AFC Volume Exp"/>
            </TreeViewItem>
        </TreeView>
    </DockPanel>

</Page>
