<Page x:Class="ProtocolMaster.View.LogPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtocolMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="LogPane">

    <DockPanel Background="White">
        <!--Log Toolbar-->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <TextBlock Style="{StaticResource ToolHeader}">Log</TextBlock>
                <Button Content="Open Folder" Name="LogFolderButton" Click="Log_Folder_Click"/>
                <Button Content="Test" Name="LogTest" Click="Log_Test"/>
            </ToolBar>
        </ToolBarTray>
        <!--Log Content-->
        <FlowDocumentReader Name="LogReader">
            <FlowDocument Name="LogDocument" FontFamily="Consolas" FontSize="12">

            </FlowDocument>
        </FlowDocumentReader>
    </DockPanel>
</Page>
