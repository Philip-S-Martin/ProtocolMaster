<Page x:Class="ProtocolMaster.View.LogPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtocolMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="LogPane">

    <DockPanel >
        <DockPanel DockPanel.Dock="Top" Style="{StaticResource Menu}">
            <TextBlock Style="{StaticResource MenuHeader}" DockPanel.Dock="Top">Log</TextBlock>
            <Menu>
                <MenuItem Header="Open Folder" Name="LogFolderButton" Click="Log_Folder_Click"/>
                <MenuItem Header="Test" Name="LogTest" Click="Log_Test"/>
            </Menu>
        </DockPanel>
        <!--Log Content-->
        <FlowDocumentScrollViewer Name="LogReader">
            <FlowDocument Name="LogDocument" FontFamily="Consolas" FontSize="12">

            </FlowDocument>
        </FlowDocumentScrollViewer>
    </DockPanel>
</Page>
