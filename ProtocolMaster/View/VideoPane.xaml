<Page x:Class="ProtocolMaster.View.VideoPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtocolMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="VideoPane">

    <DockPanel>
        <!--Camera/Video Toolbar-->
        <DockPanel DockPanel.Dock="Top" Style="{StaticResource Menu}">
            <TextBlock Style="{StaticResource MenuHeader}" DockPanel.Dock="Top">Video Feed</TextBlock>
            <Menu>
                <MenuItem Header="Camera">
                    <MenuItem Header="Start"/>
                    <MenuItem Header="Stop"/>
                    <Separator/>
                    <MenuItem Header="Selected: None" IsEnabled="False"/>
                    <Separator/>
                    <MenuItem Header="Select Camera">
                        <MenuItem Header="SomeCamera"/>
                        <MenuItem Header="SomeCamera"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Record"/>
            </Menu>
        </DockPanel>
        <!--Camera/Video Content-->
        <Grid>
            

        </Grid>
    </DockPanel>
</Page>
