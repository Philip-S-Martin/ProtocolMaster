<Page x:Class="ProtocolMaster.View.PropertiesPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtocolMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="400"
      Title="PropertiesPane">

    <DockPanel >
        <DockPanel DockPanel.Dock="Top" Style="{StaticResource Menu}">
            <TextBlock Style="{StaticResource MenuHeader}" DockPanel.Dock="Top">Properties</TextBlock>
            <Menu>
                <MenuItem Header="Menu Button"/>
            </Menu>
        </DockPanel>
        <TextBlock Margin="5,5,5,5" >
                        This is the properties panel! Hippity hoppity, click and edit properties!
        </TextBlock>
    </DockPanel>
</Page>
